<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlMirats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light_blue</item>
        <item name="colorPrimaryVariant">@color/primary_dark_blue</item>
        <item name="colorOnPrimary">@color/primary_light_blue</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_light</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant_light</item>
        <item name="colorOnSecondary">@color/color_on_secondary_light</item>

        <!-- Background and text colors for light mode. -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black_2</item>
    </style>
</resources>