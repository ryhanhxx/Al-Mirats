<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    style="@style/SizeTable"
    android:gravity="center"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_ahliWaris"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="Ayah"
            style="@style/TeksTablePembagianDefault"
            android:gravity="start|center"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:background="@drawable/table_content"/>
        <TextView
            android:id="@+id/txt_bagian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17.5"
            android:layout_marginStart="4dp"
            android:text="1/2"
            style="@style/TeksTablePembagianDefault"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/table_content"/>
        <TextView
            android:id="@+id/txt_jumlahOrang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="12.5"
            android:layout_marginStart="4dp"
            android:text="1"
            style="@style/TeksTablePembagianDefault"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/table_content"/>
        <TextView
            android:id="@+id/txt_hartaBagian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_marginStart="4dp"
            android:text="Rp. 100.000"
            style="@style/TeksTablePembagianDefault"
            android:paddingEnd="5dp"
            android:gravity="end|center"
            android:textColor="@color/white"
            android:background="@drawable/table_content"/>
        <TextView
            android:id="@+id/txt_hartaPerOrang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:layout_marginStart="4dp"
            android:text="Rp. 100.000"
            style="@style/TeksTablePembagianDefault"
            android:paddingEnd="5dp"
            android:gravity="end|center"
            android:textColor="@color/white"
            android:background="@drawable/table_content"/>
        <TextView
            android:id="@+id/txt_keterangan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginStart="4dp"
            android:text="Aul"
            style="@style/TeksTablePembagianDefault"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/table_content"/>
</LinearLayout>