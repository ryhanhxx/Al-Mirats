<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SizeTable"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_ahliWaris"
        style="@style/TeksTablePembagianDefault"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:background="@drawable/table_content"
        android:gravity="start|center"
        android:paddingLeft="5dp"
        android:text="Ayah"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_bagian"
        style="@style/TeksTablePembagianDefault"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="17.5"
        android:background="@drawable/table_content"
        android:gravity="center"
        android:text="1/2"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_jumlahOrang"
        style="@style/TeksTablePembagianDefault"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="12.5"
        android:background="@drawable/table_content"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_hartaBagian"
        style="@style/TeksTablePembagianDefault"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="20"
        android:background="@drawable/table_content"
        android:gravity="end|center"
        android:paddingEnd="5dp"
        android:text="Rp. 100.000"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_hartaPerOrang"
        style="@style/TeksTablePembagianDefault"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="20"
        android:background="@drawable/table_content"
        android:gravity="end|center"
        android:paddingEnd="5dp"
        android:text="Rp. 100.000"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_keterangan"
        style="@style/TeksTablePembagianDefault"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_weight="10"
        android:background="@drawable/table_content"
        android:gravity="center"
        android:text="Aul"
        android:textColor="@color/white" />
</LinearLayout>