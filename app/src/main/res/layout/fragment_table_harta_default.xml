<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_tableHarta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/table_second_primary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/table_primary"
                android:gravity="center"
                android:text="@string/txt_keterangan"
                android:textColor="@color/white" />

            <TextView
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="50"
                android:background="@drawable/table_primary"
                android:gravity="center"
                android:text="@string/txt_jumlah"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            style="@style/SizeTable"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_hartaAwal"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/table_content"
                android:gravity="start|center"
                android:paddingLeft="5dp"
                android:text="@string/txt_harta"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/hartaAwal"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="50"
                android:background="@drawable/table_content"
                android:gravity="end|center"
                android:paddingEnd="5dp"
                android:text="Rp. 100.000"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/SizeTable"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_hutang"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/table_content"
                android:gravity="start|center"
                android:paddingLeft="5dp"
                android:text="@string/txt_hutang"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/hutang"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="50"
                android:background="@drawable/table_content"
                android:gravity="end|center"
                android:paddingEnd="5dp"
                android:text="Rp. 100.000"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/SizeTable"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_biayaPerawatanJenazah"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/table_content"
                android:gravity="start|center"
                android:paddingLeft="5dp"
                android:text="@string/txt_jenazah"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/biayaPerawatanJenazah"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="50"
                android:background="@drawable/table_content"
                android:gravity="end|center"
                android:paddingEnd="5dp"
                android:text="Rp. 100.000"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            style="@style/SizeTable"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_wasiat"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/table_content"
                android:gravity="start|center"
                android:paddingLeft="5dp"
                android:text="@string/txt_wasiat"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/wasiat"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="50"
                android:background="@drawable/table_content"
                android:gravity="end|center"
                android:paddingEnd="5dp"
                android:text="Rp. 100.000"
                android:textColor="@color/white" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/table_primary"
                android:gravity="center"
                android:text="@string/txt_total_harta_bersih"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_totalHartaBersih"
                style="@style/TeksTableDefault"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="25"
                android:background="@drawable/table_primary"
                android:gravity="end|center"
                android:paddingEnd="5dp"
                android:text="Rp. 100.000"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>