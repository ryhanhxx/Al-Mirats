<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_tableHarta"
                android:layout_width="1000dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"

                android:background="@drawable/table_second_primary"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    style="@style/SizeTableZoom"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:text="@string/txt_keterangan"
                        style="@style/TeksTableZoom"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/table_primary"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginStart="4dp"
                        android:text="Jumlah"
                        style="@style/TeksTableZoom"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/table_primary"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    style="@style/SizeTableZoom"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_hartaAwal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:paddingStart="20dp"
                        android:text="@string/txt_harta"
                        style="@style/TeksTableZoom"
                        android:gravity="start|center"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:background="@drawable/table_content"/>

                    <TextView
                        android:id="@+id/hartaAwal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginStart="4dp"
                        android:paddingEnd="20dp"
                        android:gravity="end|center"
                        android:text="Rp. 100.000"
                        style="@style/TeksTableZoom"
                        android:textColor="@color/white"
                        android:background="@drawable/table_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    style="@style/SizeTableZoom"
                    android:gravity="center"

                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_hutang"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:text="@string/txt_hutang"
                        android:paddingStart="20dp"
                        style="@style/TeksTableZoom"
                        android:gravity="start|center"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:background="@drawable/table_content"/>

                    <TextView
                        android:id="@+id/hutang"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginStart="4dp"
                        android:paddingEnd="20dp"
                        android:gravity="end|center"
                        android:text="Rp. 100.000"
                        style="@style/TeksTableZoom"
                        android:textColor="@color/white"
                        android:background="@drawable/table_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    style="@style/SizeTableZoom"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_biayaPerawatanJenazah"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:text="@string/txt_jenazah"
                        android:paddingStart="20dp"
                        style="@style/TeksTableZoom"
                        android:gravity="start|center"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:background="@drawable/table_content"/>

                    <TextView
                        android:id="@+id/biayaPerawatanJenazah"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginStart="4dp"
                        android:paddingEnd="20dp"
                        android:gravity="end|center"
                        android:text="Rp. 100.000"
                        style="@style/TeksTableZoom"
                        android:textColor="@color/white"
                        android:background="@drawable/table_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    style="@style/SizeTableZoom"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_wasiat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:text="@string/txt_wasiat"
                        android:paddingStart="20dp"
                        style="@style/TeksTableZoom"
                        android:gravity="start|center"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:background="@drawable/table_content"/>

                    <TextView
                        android:id="@+id/wasiat"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:layout_marginStart="4dp"
                        android:paddingEnd="20dp"
                        android:gravity="end|center"
                        android:text="Rp. 100.000"
                        style="@style/TeksTableZoom"
                        android:textColor="@color/white"
                        android:background="@drawable/table_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    style="@style/SizeTableZoom"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:text="@string/txt_total_harta_bersih"
                        style="@style/TeksTableZoom"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/table_primary"/>
                    <TextView
                        android:id="@+id/txt_totalHartaBersih"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:layout_marginStart="4dp"
                        android:paddingEnd="20dp"
                        android:text="Rp. 100.000"
                        style="@style/TeksTableZoom"
                        android:gravity="end|center"
                        android:textColor="@color/white"
                        android:background="@drawable/table_primary"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </HorizontalScrollView>
</androidx.core.widget.NestedScrollView>
